<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/topLayout"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    android:keepScreenOn="true">
  <com.demo.store.widgets.barcodereader.ui.camera.CameraSourcePreview
      android:id="@+id/preview"
      android:layout_centerInParent="true"
      android:layout_width="@dimen/size_300dp"
      android:layout_height="@dimen/size_300dp">

    <com.demo.store.widgets.barcodereader.ui.camera.GraphicOverlay
        android:id="@+id/graphicOverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

  </com.demo.store.widgets.barcodereader.ui.camera.CameraSourcePreview>
  <View
      android:layout_width="270dp"
      android:layout_height="2dp"
      android:background="@android:color/holo_red_dark"
      android:layout_centerInParent="true"/>
  <LinearLayout   android:id="@+id/flashIconButton"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentRight="true"
      android:layout_gravity="right|top"
      android:padding="16dp">
    <ImageView
        android:id="@+id/flashIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_flash_on_white_24dp" />
  </LinearLayout>
</RelativeLayout>
